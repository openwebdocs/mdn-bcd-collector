<% if (process.env.NODE_ENV === "production") { %>
<p id="unsecure-warning"><a href="https://collector.openwebdocs.org" class="error-notice" id="unsecure-warning-link"><span class="mdi mdi-lock-off"></span> Warning: not using HTTPS!</a></p>

<script>
  if (location.protocol === 'https:') {
    document.getElementById('unsecure-warning').remove();
  } else {
    document.getElementById('unsecure-warning-link').href = location.href.replace('http://', 'https://');
  }
</script>
<% } %>
